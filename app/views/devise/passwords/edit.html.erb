<div class="text-center py-6">
  <h2 class="text-xl font-bold text-gray-800 pt-4 pb-5">パスワードを変更します</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード", class: "font-bold text-gray-700 rounded pb-4" %><br />
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %>文字以上のパスワードを入力してください。</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mt-2 p-2 border border-gray-300 rounded w-2/3" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワードの確認", class: "font-bold text-gray-700 rounded pb-4" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 p-2 border border-gray-300 rounded w-2/3" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを変更する", class: "bg-stone-400 hover:bg-stone-200 text-white font-bold py-2 px-6 rounded" %>
    </div>
  <% end %>
</div>
